@model RegisterArtistViewModel
@{ 
    Layout = "_Layout";
}
<div style="width: 100%;height: 90px;background-color: #0F0F0F";></div>
<div class="register-artist-profile">
    <p class="header">Станьте исполнителем и загружайте свою музыку.</p>
    <form asp-controller="Artist" asp-action="RegisterArtist" method="post" enctype="multipart/form-data">
        <div class="register-artist-form">
            <input type="text" asp-for="BandName" style="width:80%; border-radius:15px; padding:3px;"> <p>Имя исполнителя<p>
            <span asp-validation-for="BandName"></span>
            <input type="file" asp-for="Logo">
            <p>Логотип исполнителя<p>
            <span asp-validation-for="Logo"></span>
            <input type="submit" class="button" style="background-color:white; color:black;">
        </div>
    </form>
</div>
